<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.edgegallery.appstore.infrastructure.persistence.apackage.PushablePackageMapper">

    <select id="getAllPushablePackages"
            resultType="org.edgegallery.appstore.interfaces.apackage.facade.dto.PushablePackageDto">
        select * from catalog_package_table order by CREATETIME
    </select>


    <select id="getPushablePackages"
            resultType="org.edgegallery.appstore.interfaces.apackage.facade.dto.PushablePackageDto">
        select * from catalog_package_table where packageid = #{packageId}
    </select>


</mapper>

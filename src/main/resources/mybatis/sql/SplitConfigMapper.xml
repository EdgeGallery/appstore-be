<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.edgegallery.appstore.infrastructure.persistence.order.SplitConfigMapper">

    <insert id="insert"
            parameterType="org.edgegallery.appstore.infrastructure.persistence.order.SplitConfigPo">
        insert into app_split_config
        (appId, splitRatio)
        VALUES (#{appId}, #{splitRatio})
    </insert>

    <update id="update"
            parameterType="org.edgegallery.appstore.infrastructure.persistence.order.SplitConfigPo">
        update app_split_config
        SET splitRatio = #{splitRatio}
        WHERE appId = #{appId}
    </update>

    <delete id="delete"
            parameterType="java.lang.String">
        delete from app_split_config
        WHERE appId = #{appId}
    </delete>

    <select id="findByAppId"
            parameterType="java.lang.String"
            resultType="org.edgegallery.appstore.infrastructure.persistence.order.SplitConfigPo">
        select * from app_split_config
        WHERE appId = #{appId}
    </select>

    <select id="findAll"
            resultType="org.edgegallery.appstore.infrastructure.persistence.order.SplitConfigPo">
        select * from app_split_config
    </select>

</mapper>
